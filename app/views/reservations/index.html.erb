
<div class="container">
  <h1>Salles de classe réservées</h1>
  <ul class="list-group">
    <% @user.reservations.each do |reservation| %>
      <li class="list-group-item">
        Réservation à <strong><%= link_to reservation.space.city.capitalize, reservation_path(reservation) %></strong> | Réservation : 000<%= reservation.id %>
      </li>
    <% end %>
  </ul>
</div>

<div class="container">
  <h1>Salles de classe louées</h1>
  <ul class="list-group">
    <% @user.spaces.each do |space|  %>
      <li class="list-group-item">
        Louée à <strong><%= link_to space.city.capitalize,space_path(space) %></strong> | Espace : 000<%= space.id %>
      </li>
    <% end %>
  </ul>
</div>
